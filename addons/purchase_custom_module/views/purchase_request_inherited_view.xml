<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="purchase_request_line_tree_inherited_view" model="ir.ui.view">
            <field name="name">Bổ sung chi tiết yêu cầu - tree view</field>
            <field name="model">purchase.request.line</field>
            <field name="inherit_id" ref="purchase_request.purchase_request_line_tree_view"/>
            <field name="arch" type="xml">
                <!--Bổ sung thông tin purchase xuất xứ, NSX, bảo hành-->
                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="product_country"/>
                    <field name="manufacturer"/>
                    <field name="product_warranty"/>
                </xpath>
            </field>
        </record>
        <record id="purchase_request_line_form_inherited_view" model="ir.ui.view">
            <field name="name">Bổ sung chi tiết yêu cầu - form view</field>
            <field name="model">purchase.request.line</field>
            <field name="inherit_id" ref="purchase_request.purchase_request_line_form_view"/>
            <field name="arch" type="xml">
                <!--Bổ sung thông tin purchase xuất xứ, NSX, bảo hành-->
                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="product_country" attrs="{'readonly': True}" invisible="1"/>
                    <field name="manufacturer" attrs="{'readonly': True}" invisible="1"/>
                    <field name="product_warranty" attrs="{'readonly': True}" invisible="1"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>